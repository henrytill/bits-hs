cabal-version:      3.0
name:               bits
version:            0.1.0.0
synopsis:           Some random bits of code
-- description:
-- license:            Unlicense
-- license-file:       LICENSE
author:             Henry Till
maintainer:         henrytill@gmail.com
-- copyright:
build-type:         Simple
-- extra-doc-files:    CHANGELOG.md
-- extra-source-files:

common warnings
    ghc-options: -Wall

library
    import:           warnings
    exposed-modules:  Bits.ALaCarte
                      Bits.ApplicativeExamples
                      Bits.AwkwardSquad
                      Bits.Bananas
                      Bits.EpigramFunctorKit
                      Bits.FirstLenses
                      Bits.Fixed
                      Bits.FunDeps
                      Bits.FunWithPhantomTypes
                      Bits.Graph
                      Bits.IteratorEssence
                      Bits.MicroParsec
                      Bits.Misc
                      Bits.NatFun
                      Bits.Origami
                      Bits.Polarity
                      Bits.RankNTypesExamples
                      Bits.Singletons
                      Bits.Spreadsheet
                      Bits.StagedRouter
                      Bits.StagedRouterExample
                      Bits.Staging
                      Bits.StagingDefs
                      Bits.STArrayExamples
                      Bits.STExplorations
                      Bits.TaggedAST
                      Bits.TinyServant
                      Bits.TwoLevel
                      Bits.WorkerWrapper
                      Bits.Zipper
    -- other-modules:
    -- other-extensions:
    build-depends:    base >=4.17 && <5,
                      array ^>=0.5.4.0,
                      containers >=0.6,
                      dlist ^>=1.0,
                      mtl >=2.2,
                      prettyprinter-compat-ansi-wl-pprint ^>=1.0.2,
                      random ^>=1.2.1.2,
                      template-haskell ^>=2.20.0.0,
                      text ^>=2.0.2,
                      time ^>=1.12.2
    hs-source-dirs:   src
    default-language: Haskell2010

test-suite bits-test
    import:           warnings
    default-language: Haskell2010
    other-modules:
      Bits.SpreadsheetTest

    -- other-extensions:
    type:             exitcode-stdio-1.0
    hs-source-dirs:   test
    main-is:          Main.hs
    build-depends:
        base >=4.17 && <5,
        QuickCheck >=2.14,
        bits

test-suite bits-inspection
    type:             exitcode-stdio-1.0
    main-is:          InspectTaggedAST.hs
    ghc-options:      -main-is InspectTaggedAST
    hs-source-dirs:   test-inspection
    default-language: Haskell2010
    ghc-options:      -Wall
    build-depends:
        base >=4.17.2.1 && <4.19,
        array ^>=0.5.4.0,
        inspection-testing ^>=0.6.2,
        bits
